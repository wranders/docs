{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Dev Container",
            "type": "shell",
            "windows": {
                "command": "bash",
                "args": [
                    "-c",
                    "podman build -t localhost/docs -f $(wslpath ''${workspaceFolder}'')/Dockerfile"
                ]
            },
            "linux": {
                "command": "podman",
                "args": [
                    "build",
                    "-t", "localhost/docs",
                    "-f", "${PWD}/Dockerfile"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "Launch Dev Container",
            "type": "shell",
            "dependsOn": [
                "Build Dev Container"
            ],
            "windows": {
                "command": "bash",
                "args": [
                    "-c",
                    "podman run --rm -it -v $(wslpath ''${workspaceFolder}''):/docs -p 8000:8000 localhost/docs"
                ]
            },
            "linux": {
                "command": "podman",
                "args": [
                    "run", "--rm", "-it",
                    "-v", "${PWD}:/docs",
                    "-p", "8000:8000",
                    "localhost/docs"
                ]
            },
            "problemMatcher": []
        }
    ]
}